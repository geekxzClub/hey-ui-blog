.h-box {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 999;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
  width: 600rpx;
}
.h-arrow {
  width: 0;
  height: 0;
  margin-right: 120rpx;
  border-width: 10rpx;
  border-style: solid;
  
}
.h-body {
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  padding: 0 18rpx 0 30rpx;
  margin-right: 60rpx;
}
.h-text {
  font-size: 26rpx;
  font-weight: 400;
}

.h-split-line {
  padding: 0 20rpx;
  height: 100%;
}

.h-split-line:after {
  content: '';
  position: absolute;
  top: 34rpx;
  width: 2rpx;
  height: 40rpx;
  background: #A6A6A6;
}

.h-cancle_btn {
  display:flex;                   
  justify-content: center; 
}
