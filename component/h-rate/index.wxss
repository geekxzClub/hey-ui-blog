.h-rate .star, .h-rate .star-o {
  width: 0;
  height: 0;
  color: red;
  position: relative;
  display: inline-block;
  vertical-align: middle;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-bottom: 14rpx solid rgb(247, 186, 42);
  transform: rotate(180deg);
  margin: 0 5rpx;
}

.h-rate .star::after, .h-rate .star::before,
.h-rate .star-o::after, .h-rate .star-o::before {
  content: '';
  width: 0;
  height: 0;
  color: red;
  position: absolute;
  display: inline-block;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-bottom: 14rpx solid rgb(247, 186, 42);
  top: -0rpx;
  left: -16rpx;
}

.h-rate .star::after, .h-rate .star-o::after {
  content: '';
  transform: rotate(-68deg);
}

.h-rate .star::before, .h-rate .star-o::before {
  content: '';
  transform: rotate(68deg);
}

.h-rate .star-o {
  border-bottom: 14rpx solid #ccc;
}

.h-rate .star-o::after, .h-rate .star-o::before {
  border-bottom: 14rpx solid #ccc;
}

.heart,.heart-o {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  width: 16rpx;
  height: 16rpx;
  background-color: red;
  border-radius: 2rpx;
  transform: rotate(45deg);
  margin: 0 14rpx;
}

.heart:before,.heart:after,.heart-o:before,.heart-o:after {
  content: '';
  position: absolute;
  display: inline-block;
  vertical-align: middle;
  width: 16rpx;
  height: 16rpx;
  background-color: red;
  border-radius: 50%;
  top: 0rpx;
  left: -6rpx;
}

.heart:after, .heart-o:after {
  left: 0rpx;
  top: -6rpx;
}

.heart-o {
  background: #ccc;
}
.heart-o:before,.heart-o:after {
  background: #ccc;
}
