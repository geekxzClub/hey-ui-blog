/**index.wxss**/
/* Card */
.h-active{
  height: 560rpx;
  display: inline-block;
}
.h-active-img{
  width: 100%;
  height: 330rpx;
}
.h-active-img image{
  width: 100%; 
  height: 330rpx;
}
.h-active-content{
  width: 100%; 
  height: 180rpx;
  position: relative
}
.h-active-content .h-active-tit{
  width: 420rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.h-active-content .h-active-time{
  width: 96%;
  height: 80rpx;
  line-height: 60rpx;
}
.h-active-content .h-view-time{  
  position: absolute;
  bottom: -40rpx;
  left: 0rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}
.h-status {
  display: inline-block;
  vertical-align: middle;
  zoom: 1;
  height: 32px;
  line-height: 32px;
  padding-left: 20px;
  padding-right: 20rpx;
  position: absolute;
  right: 0rpx;
  top: 40rpx;
}
.h-status::before{
    content: "";
    display: block;
    position: absolute;
    border-right: none;
    border: 16px solid transparent;
    border-left: 10px solid #ffffff;
    left: 0;
}