/**index.wxss**/

.h-list.h-grid>.h-item image{
	height: 70rpx;
	width: 70rpx;
	border-radius: 0rpx;
}
/* Card */
.h-active{
  height: 560rpx;
  display: inline-block;
}
.h-active-img{
  width: 100%;
  height: 330rpx;
}
.h-active-img image{
  width: 100%; 
  height: 330rpx;
}
.h-active-content{
  width: 100%; 
  height: 180rpx;
  position: relative
}
.h-active-content .h-active-tit{
  width: 420rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.h-active-content .h-active-time{
  width: 96%;
  height: 80rpx;
  line-height: 60rpx;
}
.h-active-content .h-view-time{  
  position: absolute;
  bottom: -40rpx;
  left: 0rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}
.h-status {
  display: inline-block;
  vertical-align: middle;
  zoom: 1;
  height: 32px;
  line-height: 32px;
  padding-left: 20px;
  padding-right: 20rpx;
  position: absolute;
  right: 0rpx;
  top: 40rpx;
}
.h-status::before{
    content: "";
    display: block;
    position: absolute;
    border-right: none;
    border: 16px solid transparent;
    border-left: 10px solid #ffffff;
    left: 0;
}


.h-nav .h-scroll-x{
  width: 46%;
  margin: 0rpx 0rpx;
  padding: 0 15rpx
}
.h-nav .h-scroll-x:first-child{
  padding-left: 30rpx
}.h-nav .h-scroll-x:last-child{
  padding-right: 30rpx
}
.h-scroll-x .h-scroll-item{
  height: 400rpx;
}
.h-scroll-img{
  width: 100%;
  height: 330rpx;
}
.h-scroll-img image{
  width: 100%; 
  height: 330rpx;
}
.h-scroll-content{
  height: 70rpx;
  line-height: 70rpx; 
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-line;
  display: inline;
}

.h-scroll-tit{
  height: 70rpx;
  line-height: 70rpx; 
}
